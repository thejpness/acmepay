---
import ThemeToggle from './ThemeToggle.astro';
const nav = [
  { href: '/', label: 'Home' },
  { href: '/features', label: 'Features' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' }
];
function active(href: string) {
  return Astro.url.pathname === href;
}
---

<header
  class="sticky top-0 z-50 backdrop-blur-md supports-backdrop-filter:bg-slate-900/40 border-b border-white/10"
>
  <div class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between">
    <a class="flex items-center gap-2 focus:outline-none focus-visible:ring-2 ring-indigo-500 rounded-md" href="/" aria-label="AcmePay home">
      <img src="/logos/acmepay.svg" width="28" height="28" alt="" />
      <span class="font-semibold">AcmePay</span>
    </a>

    <nav aria-label="Primary" class="hidden md:flex items-center gap-6">
      {nav.map((n) => (
        <a
          href={n.href}
          aria-current={active(n.href) ? 'page' : undefined}
          class={`text-sm hover:text-white/90 focus-visible:outline-none focus-visible:ring-2 ring-indigo-500 rounded-md ${
            active(n.href)
              ? 'text-white after:block after:h-0.5 after:bg-linear-to-r after:from-indigo-500 after:via-violet-500 after:to-fuchsia-500 after:mt-1'
              : 'text-white/70'
          }`}
        >
          {n.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-3">
      <a href="/pricing" class="hidden sm:inline-block rounded-xl px-3 py-2 text-sm border border-white/15 hover:bg-white/5">Get started</a>
      <ThemeToggle />
    </div>
  </div>
</header>
