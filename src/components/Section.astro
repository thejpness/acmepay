---
const { eyebrow, title, desc } = Astro.props as { eyebrow?: string; title?: string; desc?: string; };
---
<section class="mx-auto max-w-7xl px-4 py-16">
  {eyebrow && <p class="text-xs uppercase tracking-[0.2em] text-indigo-300/90">{eyebrow}</p>}
  {title && <h2 class="mt-2 text-3xl font-bold">{title}</h2>}
  {desc && <p class="mt-2 text-white/70 max-w-prose">{desc}</p>}
  <div class="mt-8"><slot /></div>
</section>
