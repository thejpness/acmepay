---
const { eyebrow, title, desc, className, align = 'left' } = Astro.props as {
  eyebrow?: string;
  title?: string;
  desc?: string;
  className?: string;
  align?: 'left' | 'center';
};

const headerClass =
  align === 'center'
    ? 'max-w-3xl text-center mx-auto'
    : 'max-w-3xl';
---
<section class={`py-[var(--section-pad-y-mobile)] md:py-[var(--section-pad-y-desktop)] ${className ?? ''}`}>
  <div class="mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class={headerClass}>
      {eyebrow && <p class="text-xs uppercase tracking-[0.32em] text-indigo-300/90">{eyebrow}</p>}
      {title && <h2 class="mt-3 text-3xl font-semibold leading-tight text-balance md:text-4xl">{title}</h2>}
      {desc && <p class={`mt-3 text-base text-white/70 leading-relaxed ${align === 'center' ? 'mx-auto max-w-[60ch]' : 'max-w-[65ch]'}`}>{desc}</p>}
    </div>
    <div class="mt-10 md:mt-12">
      <slot />
    </div>
  </div>
</section>
