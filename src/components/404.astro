import Marketing from '../layouts/Marketing.astro';
---
<Marketing>
  <section class="mx-auto max-w-7xl px-4 py-28 text-center">
    <h1 class="text-6xl font-black bg-clip-text text-transparent" style="background:var(--grad-accent)">404</h1>
