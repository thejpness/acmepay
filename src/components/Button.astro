---
const { kind = 'primary', href = '#', ariaLabel, disabled = false } = Astro.props as {
  kind?: 'primary' | 'secondary' | 'ghost';
  href?: string;
  ariaLabel?: string;
  disabled?: boolean;
};

const base =
  'inline-flex min-h-[44px] items-center justify-center gap-2 rounded-full px-5 py-2.5 text-sm font-semibold transition duration-200 ease-out focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-400/90 focus-visible:ring-offset-2 focus-visible:ring-offset-black/40 active:translate-y-[1px] data-[disabled=true]:pointer-events-none data-[disabled=true]:opacity-50';

const cls = {
  primary:
    `${base} text-white shadow-[0_20px_40px_rgba(99,102,241,0.35)] hover:shadow-[0_25px_50px_rgba(99,102,241,0.45)]`,
  secondary:
    `${base} border border-white/15 bg-white/5 text-white/85 hover:border-white/35 hover:bg-white/10 hover:text-white`,
  ghost:
    `${base} px-4 text-white/70 hover:text-white`
}[kind];

const style = kind === 'primary' ? 'background:var(--grad-accent)' : '';
---
<a
  href={disabled ? undefined : href}
  aria-label={ariaLabel}
  aria-disabled={disabled ? 'true' : undefined}
  role={disabled ? 'button' : undefined}
  tabindex={disabled ? -1 : undefined}
  data-disabled={disabled ? 'true' : undefined}
  class={cls}
  style={style}
>
  <slot />
</a>
