---
/**
 * Accessible accordion using details/summary for built-in semantics + keyboard
 */
const items = (Astro.props?.items as { q: string; a: string }[]) ?? [];
---

<section class="space-y-3">
  {items.map((it) => (
    <details class="group glass rounded-xl p-5 transition duration-200 ease-out open:shadow-[0_35px_65px_rgba(2,6,23,0.45)]">
      <summary class="flex min-h-[44px] cursor-pointer select-none items-center justify-between gap-4 text-left text-base font-medium leading-snug outline-none focus-visible:ring-2 focus-visible:ring-indigo-400/80 focus-visible:ring-offset-2 focus-visible:ring-offset-black/40">
        <span>{it.q}</span>
        <span class="iconify text-lg transition-transform duration-200 group-open:rotate-180" data-icon="lucide:chevron-down" aria-hidden="true"></span>
      </summary>
      <div class="pt-3 text-sm leading-relaxed text-white/70">{it.a}</div>
    </details>
  ))}
</section>

<style>
  summary::-webkit-details-marker { display: none; }
</style>
