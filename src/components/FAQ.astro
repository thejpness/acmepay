---
/**
 * Accessible accordion using details/summary for built-in semantics + keyboard
 */
const items = (Astro.props?.items as { q: string; a: string }[]) ?? [];
---

<section class="space-y-3">
  {items.map((it) => (
    <details class="glass rounded-xl p-4">
      <summary class="cursor-pointer list-none flex items-center justify-between">
        <span class="font-medium">{it.q}</span>
        <span class="iconify transition-transform data-[open=true]:rotate-180" data-icon="lucide:chevron-down" aria-hidden="true"></span>
      </summary>
      <div class="pt-3 text-sm text-white/70">{it.a}</div>
    </details>
  ))}
</section>

<style>
  details[open] summary .iconify { transform: rotate(180deg); }
  summary::-webkit-details-marker { display: none; }
</style>
