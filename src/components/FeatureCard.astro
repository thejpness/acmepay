---
const { title = 'Fast payouts', icon = 'lucide:zap', children } = Astro.props as {
  title?: string;
  icon?: string;
  children?: any;
};
---

<article class="gradient-border glass surface-alt rounded-3xl p-6 transition-transform duration-300 hover:-translate-y-1 hover:shadow-[0_40px_80px_rgba(2,6,23,0.45)]">
  <div class="flex items-center gap-4">
    <span class="icon-pill">
      <span class="iconify text-lg" data-icon={icon} aria-hidden="true"></span>
    </span>
    <div>
      <h3 class="text-lg font-semibold">{title}</h3>
      <p class="mt-1 text-xs uppercase tracking-[0.3em] text-white/40">Secure by design</p>
    </div>
  </div>
  <div class="mt-4 text-sm leading-relaxed text-white/70">
    <slot />
  </div>
</article>
