---
const { name, price, features = [], popular = false } = Astro.props as {
  name: string; price: string; features: string[]; popular?: boolean;
};
---

<div class={`glass p-6 rounded-2xl relative ${popular ? 'ring-2 ring-violet-500' : ''}`}>
  {popular && (
    <span class="absolute -top-3 left-6 bg-gradient-to-r from-indigo-500 via-violet-500 to-fuchsia-500 text-xs px-2 py-1 rounded-md">
      Most popular
    </span>
  )}
  <h3 class="text-xl font-semibold">{name}</h3>
  <p class="mt-1 text-3xl font-extrabold">{price}<span class="text-sm font-normal text-white/60"> /mo</span></p>
  <ul class="mt-4 space-y-2 text-sm">
    {features.map((f) => (
      <li class="flex items-start gap-2">
        <span class="iconify mt-0.5" data-icon="lucide:check" aria-hidden="true"></span>
        <span>{f}</span>
      </li>
    ))}
  </ul>
  <a href="/pricing" class="mt-6 inline-flex justify-center w-full rounded-xl px-4 py-2 text-sm font-medium text-white"
     style="background:var(--grad-accent)">
    Choose {name}
  </a>
</div>
