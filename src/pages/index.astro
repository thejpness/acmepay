---
import Marketing from '../layouts/Marketing.astro';
import Hero from '../components/Hero.astro';
import FeatureCard from '../components/FeatureCard.astro';
import PricingTier from '../components/PricingTier.astro';
import NewsletterForm from '../components/NewsletterForm.astro';
import Section from '../components/Section.astro';

const features = [
  { title: 'Rapid integration', icon: 'lucide:gauge', copy: 'Spin up REST and webhook integrations in hours with TypeScript tooling, API linting, and guided test scenarios.' },
  { title: 'Embedded controls', icon: 'lucide:shield', copy: 'Meet PCI DSS and safeguarding duties with tokenisation, granular roles, and full audit logs from day one.' },
  { title: 'Confident payouts', icon: 'lucide:banknote', copy: 'Automate settlements, approvals, and reconciliation so finance closes every period faster.' }
];
---

<Marketing
  title="AcmePay | Secure payments platform for scaling teams"
  description="Launch developer-friendly payments with AcmePay. Manage risk, payouts, and reconciliation from one secure control centre built for product, ops, and finance teams."
>
  <Hero />

  <Section
    align="center"
    eyebrow="Platform pillars"
    title="Built for product, operations, and finance"
    desc="Give every team one payments platform with the right level of visibility. Ship new payment journeys quickly, monitor live performance, and reconcile every payout without spreadsheet sprawl."
    className="relative isolate"
  >
    <div class="pointer-events-none absolute inset-x-0 -top-32 -z-10 mx-auto h-72 w-72 rounded-full opacity-40 blur-3xl" style="background:var(--grad-surface);"></div>
    <div class="grid gap-6 md:grid-cols-3">
      {features.map(f => (
        <FeatureCard title={f.title} icon={f.icon}>{f.copy}</FeatureCard>
      ))}
    </div>
  </Section>

  <Section
    eyebrow="Pricing"
    title="Transparent pricing that scales with you"
    desc="Pick the plan that matches today's volumes and adjust as you grow. Every tier includes support, clear reporting, and guidance from our payments specialists."
    className="relative isolate"
  >
    <div class="pointer-events-none absolute inset-0 -z-10 bg-gradient-to-b from-white/5 via-transparent to-transparent opacity-20"></div>
    <div class="flex justify-center md:justify-end">
      <a href="/contact" class="stat-pill">
        <span class="stat-dot"></span>
        Speak with our team
      </a>
    </div>
    <div class="mt-10 grid gap-6 md:grid-cols-3 md:gap-8">
      <PricingTier name="Starter" price="$0" features={['Includes 1k live transactions', 'Realtime dashboards and alerts', 'Email support from payments specialists']} />
      <PricingTier name="Growth" price="$49" features={['Supports up to 50k transactions', 'Advanced routing and retries', 'Priority response within four hours']} popular />
      <PricingTier name="Scale" price="$199" features={['Unlimited transaction volumes', 'SSO, SLA, and regional failover', 'Dedicated customer success manager']} />
    </div>
  </Section>

  <Section
    align="center"
    title="Stay in the loop"
    desc="Receive monthly notes on new releases, compliance updates, and practical guidance from the AcmePay team."
    className="relative isolate pb-0 pt-[var(--section-pad-y-mobile)] md:pt-[var(--section-pad-y-desktop)]"
  >
    <div class="pointer-events-none absolute inset-x-0 bottom-[-30%] -z-10 mx-auto h-96 w-96 translate-y-1/3 rounded-full opacity-40 blur-3xl" style="background:var(--grad-accent);"></div>
    <div class="mx-auto max-w-xl">
      <NewsletterForm />
    </div>
  </Section>
</Marketing>
