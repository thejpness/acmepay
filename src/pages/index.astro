---
import Marketing from '../layouts/Marketing.astro';
import Hero from '../components/Hero.astro';
import FeatureCard from '../components/FeatureCard.astro';
import PricingTier from '../components/PricingTier.astro';
import NewsletterForm from '../components/NewsletterForm.astro';

const features = [
  { title: 'Rapid integration', icon: 'lucide:gauge', copy: 'Spin up REST and webhook integrations in hours with TypeScript tooling, API linting, and guided test scenarios.' },
  { title: 'Embedded controls', icon: 'lucide:shield', copy: 'Meet PCI DSS and safeguarding duties with tokenisation, granular roles, and full audit logs from day one.' },
  { title: 'Confident payouts', icon: 'lucide:banknote', copy: 'Automate settlements, approvals, and reconciliation so finance closes every period faster.' }
];
---

<Marketing
  title="AcmePay | Secure payments platform for scaling teams"
  description="Launch developer-friendly payments with AcmePay. Manage risk, payouts, and reconciliation from one secure control centre built for product, ops, and finance teams."
>
  <Hero />

  <section class="relative py-24">
    <div class="pointer-events-none absolute inset-x-0 top-0 -z-10 mx-auto h-72 w-72 rounded-full blur-3xl opacity-40" style="background:var(--grad-surface);"></div>
    <div class="mx-auto max-w-7xl px-4">
      <div class="mx-auto max-w-3xl text-center">
        <p class="text-xs uppercase tracking-[0.4em] text-white/40">Platform pillars</p>
        <h2 class="mt-4 text-3xl font-semibold tracking-tight md:text-4xl">Built for product, operations, and finance</h2>
        <p class="mt-3 text-white/60">
          Give every team one payments platform with the right level of visibility. Ship new payment journeys quickly, monitor live performance, and reconcile every payout without spreadsheet sprawl.
        </p>
      </div>
      <div class="mt-12 grid gap-6 md:grid-cols-3">
        {features.map(f => (
          <FeatureCard title={f.title} icon={f.icon}>{f.copy}</FeatureCard>
        ))}
      </div>
    </div>
  </section>

  <section class="relative pb-24">
    <div class="absolute inset-0 -z-10 bg-gradient-to-b from-white/5 via-transparent to-transparent opacity-20"></div>
    <div class="mx-auto max-w-7xl px-4">
      <div class="flex flex-col gap-6 text-center md:text-left md:flex-row md:items-end md:justify-between">
        <div>
          <p class="text-xs uppercase tracking-[0.4em] text-white/40">Pricing</p>
          <h2 class="mt-3 text-3xl font-semibold tracking-tight md:text-4xl">Transparent pricing that scales with you</h2>
          <p class="mt-3 max-w-2xl text-white/60">Pick the plan that matches today's volumes and adjust as you grow. Every tier includes support, clear reporting, and guidance from our payments specialists.</p>
        </div>
        <a href="/contact" class="stat-pill self-center md:self-end">
          <span class="stat-dot"></span>
          Speak with our team
        </a>
      </div>
      <div class="mt-12 grid gap-6 md:grid-cols-3">
        <PricingTier name="Starter" price="$0" features={['Includes 1k live transactions', 'Realtime dashboards and alerts', 'Email support from payments specialists']} />
        <PricingTier name="Growth" price="$49" features={['Supports up to 50k transactions', 'Advanced routing and retries', 'Priority response within four hours']} popular />
        <PricingTier name="Scale" price="$199" features={['Unlimited transaction volumes', 'SSO, SLA, and regional failover', 'Dedicated customer success manager']} />
      </div>
    </div>
  </section>

  <section class="relative pb-32">
    <div class="absolute inset-x-0 bottom-0 -z-10 mx-auto h-96 w-96 translate-y-1/3 rounded-full blur-3xl opacity-40" style="background:var(--grad-accent);"></div>
    <div class="mx-auto max-w-3xl px-4 text-center">
      <h2 class="text-3xl font-semibold tracking-tight md:text-4xl">Stay in the loop</h2>
      <p class="mt-3 text-white/60">Receive monthly notes on new releases, compliance updates, and practical guidance from the AcmePay team.</p>
      <div class="mt-8">
        <NewsletterForm />
      </div>
    </div>
  </section>
</Marketing>
